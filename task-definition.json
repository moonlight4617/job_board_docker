{
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "502674413540.dkr.ecr.ap-northeast-1.amazonaws.com/jobpair-prod-nginx:latest",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [],
            "mountPoints": [],
            "volumesFrom": [],
            "secrets": [],
            "dependsOn": [
                {
                    "containerName": "php",
                    "condition": "START"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/jobpair-prod/nginx",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "systemControls": []
        },
        {
            "name": "php",
            "image": "502674413540.dkr.ecr.ap-northeast-1.amazonaws.com/jobpair-prod-php:latest",
            "cpu": 0,
            "portMappings": [],
            "essential": true,
            "environment": [
                {
                    "name": "DB_CONNECTION",
                    "value": "mysql"
                },
                {
                    "name": "DB_HOST",
                    "value": "db"
                },
                {
                    "name": "DB_PORT",
                    "value": "3306"
                },
                {
                    "name": "DB_DATABASE",
                    "value": "laravel"
                },
                {
                    "name": "DB_USERNAME",
                    "value": "phper"
                },
                {
                    "name": "DB_PASSWORD",
                    "value": "secret"
                }
            ],
            "mountPoints": [],
            "volumesFrom": [],
            "secrets": [
                {
                    "name": "APP_KEY",
                    "valueFrom": "/jobpair/prod/APP__KEY"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/jobpair-prod/php",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "systemControls": []
        },
        {
            "name": "mysql",
            "image": "502674413540.dkr.ecr.ap-northeast-1.amazonaws.com/jobpair-prod-mysql:latest",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 3306,
                    "hostPort": 3306
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "secret"
                },
                {
                    "name": "MYSQL_DATABASE",
                    "value": "laravel"
                },
                {
                    "name": "MYSQL_USER",
                    "value": "phper"
                },
                {
                    "name": "MYSQL_PASSWORD",
                    "value": "secret"
                },
                {
                    "name": "TZ",
                    "value": "Asia/Tokyo"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "db-store",
                    "containerPath": "/var/lib/mysql"
                }
            ],
            "volumesFrom": [],
            "secrets": [],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/jobpair-prod/mysql",
                    "awslogs-region": "ap-northeast-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "systemControls": []
        }
    ],
    "family": "jobpair-prod",
    "taskRoleArn": "arn:aws:iam::502674413540:role/jobpair-prod-ecs-task",
    "executionRoleArn": "arn:aws:iam::502674413540:role/jobpair-prod-ecs-task-execution",
    "networkMode": "awsvpc",
    "volumes": [
        {
            "name": "db-store"
        }
    ],
    "placementConstraints": [],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512"
}
